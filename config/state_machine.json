{
  "initial_state": "EXPRESSED_INTEREST",
  "states": {
    "EXPRESSED_INTEREST": {
      "description": "New Lead received, pending scoring",
      "transitions": [
        { "to": "FRANCHISEE_VETTED", "trigger": "auto_score_complete" }
      ]
    },
    "FRANCHISEE_VETTED": {
      "description": "Scored, pending automated decision on fit",
      "transitions": [
        { "to": "POTENTIAL_FIT", "trigger": "score_above_threshold" },
        { "to": "NO_FIT", "trigger": "score_below_threshold" }
      ]
    },
    "POTENTIAL_FIT": {
      "description": "Passed vetting, pending Invite to Initial Call",
      "sla_days": 7,
      "on_entry": { "action": "draft_message", "template": "invite_to_call" },
      "transitions": [
        { "to": "INITIAL_CONVO", "trigger": "call_completed" }
      ]
    },
    "NO_FIT": {
      "description": "Failed vetting, pending Rejection Email",
      "on_entry": { "action": "draft_message", "template": "rejection_notice" },
      "transitions": [
        { "to": "TURNED_DOWN", "trigger": "rejection_sent" }
      ]
    },
    "INITIAL_CONVO": {
      "description": "Call Scheduled/Happening",
      "sla_days": 7,
      "transitions": [
        { "to": "BUSINESS_PROPOSAL", "trigger": "sent_proposal_form" }
      ]
    },
    "INACTIVE": {
      "description": "No engagement for 30 days",
      "entry_condition": "days_since_contact > 30"
    }
  }
}